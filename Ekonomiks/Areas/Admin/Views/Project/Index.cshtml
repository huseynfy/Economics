@model IEnumerable<Project>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section>
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-12 col-sm-12 col-md-12">
                <button class="btnadd">
                    <a asp-area="admin" asp-controller="project" asp-action="create">Yenisi əlavə et</a>
                </button>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Şəkil</th>
                            <th scope="col">Proyektin adı</th>
                            <th scope="col">Proyektin əhəmiyyəti</th>
                            <th scope="col">Proyekt haqqında</th>
                            <th scope="col">Proyektin məqsədi</th>
                            <th scope="col">Tarix</th>
                            <th scope="col">Düzəliş et</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td><img src="~/img/@item.Image" alt="image" width="200" height="120" /></td>
                                <td>@item.Header</td>
                                <td>@item.Importance</td>
                                <td>@item.Info</td>
                                <td>@item.Goal</td>
                                <td>@item.DateTime.Date.ToShortDateString()</td>
                                <td>
                                    <button class="btnupdate">
                                        <a asp-area="admin" asp-controller="project" asp-action="update" asp-route-id="@item.Id">
                                            <img src="~/admin/img/edit.svg" alt="">
                                        </a>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
