@model LoginVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - Ekonomiks</title>
    <link rel="shortcut icon" href="~/img/AppleTouchIconBIAB.png" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/img/AppleTouchIconBIAB.png" type="image/x-icon">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/style.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                <img src="~/img/logo_icon.png" class="logoimagelogin" alt="">
                <div asp-validation-summary="ModelOnly" class="errormessage2">
                </div>
            </div>
            <div class="col-lg-6 offset-lg-3 col-md-12 col-sm-12">
                <form method="post">
                    <label asp-for="Email" class="labels">Email</label>
                    <input asp-for="Email" name="email" class="inputslogin">
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <label asp-for="Password" class="labels">Parol</label>
                    <input asp-for="Password" class="inputslogin">
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <label asp-for="RememberMe" class="labels">Yadda saxla</label>
                    <input asp-for="RememberMe" id="rememberme">
                    <button type="submit" class="btnlogin">Giriş</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
