
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Ekonomiks</title>
    <link href="~/img/AppleTouchIconBIAB.png" rel="apple-touch-icon" />
    <link href="~/img/AppleTouchIconBIAB.png" rel="icon" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/admin/style.css">
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row rowheader" id="head">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <p class="welcome"><a href="/admin/dashboard/index">Admin panelə xoş gəlmisən, @User.Identity.Name!</a></p>
                </div>
                <div class="col-lg-7 col-md-12 col-sm-12">
                    <ul class="ulmenu">
                        <li class="firstli">
                        <a asp-area="admin" asp-controller="about" asp-action="index">Haqqımızda</a></li>
                        <li><a asp-area="admin" asp-controller="actual" asp-action="index">Gündəm</a></li>
                        <li><a asp-area="admin" asp-controller="interview" asp-action="index">Müsahibələr</a></li>
                        <li><a asp-area="admin" asp-controller="news" asp-action="index">Xəbərlər</a></li>
                        <li><a asp-area="admin" asp-controller="project" asp-action="index">Layihələr</a></li>
                        <li><a asp-area="admin" asp-controller="message" asp-action="index">Məktublar <sup>@ViewBag.MessageCount</sup></a></li>
                        <li><a asp-area="admin" asp-controller="contact" asp-action="index">Əlaqə</a></li>
                    </ul>
                </div>
                <div class="col-lg-1 col-sm-12 col-md-12">
                    <a href="/" target="_blank"><button class="btnhome">Ana Səhifə</button></a>
                </div>
                <div class="col-lg-1 col-sm-12 col-md-12">
                    <a asp-area="admin" asp-controller="dashboard" asp-action="logout"><button class="btnlogout">Çıxış</button></a>
                </div>
            </div>
        </div>
    </header>
    @RenderBody()
    <button class="backtotop"><a href="#head"><img src="~/img/top.svg" alt=""></a> </button>
</body>
</html>
@RenderSection("scripts", false)