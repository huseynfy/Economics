@model AllViewModel
@{
    ViewData["Title"] = "Ana Səhifə | Ekonomiks";
}
<section class="sections">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @foreach (var item in Model.Actuals.Take(1))
            {
                <a asp-controller="actual" asp-action="index" asp-route-id="@item.Id">
                    <img src="~/img/@item.Image" id="mainimage" alt="@item.Header">
                    <p id="textformainimage">@item.Header.Trim()</p>
                    <p id="textformainimage1">@item.Body.Trim().Substring(0, 140)...</p>
                </a>
            }

        </div>
    </div>
</section>
<section class="sections">
    <div class="container">
        <div class="row newsrow">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <p class="headers">
                <a asp-controller="news" asp-action="more">SON XƏBƏRLƏR<img src="~/img/arrow.svg" class="viewallicon" alt=""></a></p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.News.Take(3))
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="imagediv">
                        <a asp-controller="news" asp-action="index" asp-route-id="@item.Id">
                            <img class="latestnewsimage" src="~/img/@item.Image" width="370" height="200" alt="@item.Header">
                        </a>
                    </div>
                    <div class="boxnews">
                            <p class="boxcategorynews">@item.Category</p>
                            <p class="infoabouttext">
                                @if (item.Header.Length > 40)
                                {
                                    <a asp-controller="news" asp-action="index" asp-route-id="@item.Id">@item.Header.Trim().Substring(0, 50)...</a>

                                }
                                else
                                {
                                    <a asp-controller="news" asp-action="index" asp-route-id="@item.Id">@item.Header.Trim()</a>
                                }
                            </p>
                            <p class="datetime">@item.DateTime.ToString("dd/MM/yyyy")</p>
                            <p class="readtime"><img src="~/img/clock.svg" alt=""> @item.ReadTime dəq. oxu</p>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
